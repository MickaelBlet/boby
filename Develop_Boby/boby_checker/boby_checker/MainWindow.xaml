<Window x:Class="boby_checker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStartupLocation="CenterScreen"
        Topmost="True"
        WindowStyle="None"
        Background="Transparent"
        AllowsTransparency="True"
        Title="boby_checker"
        Height="200"
        Width="230">
	<Grid>
		<ContentControl IsTabStop="False" Template="{StaticResource Style_Aion_Grid}" />
		<Grid Margin="9,9,9,9">
			<Label
				Margin="0,0,0,0"
				Content="BOBY Checker"
				FontSize="16"
				FontWeight="Bold"
				Foreground="#FFEFEDC4"
				VerticalAlignment="Top"
				HorizontalAlignment="Center"
				Height="28"
				HorizontalContentAlignment="Center"
				VerticalContentAlignment="Top">
				<Label.Effect>
					<DropShadowEffect
						ShadowDepth="0"
						Color="#FFEFEDC4"
						Opacity="0.5"
						BlurRadius="10" />
				</Label.Effect>
			</Label>
			<Button
				Name="bt_Close"
				IsTabStop="False"
				Style="{StaticResource Style_Close_Button}"
				HorizontalAlignment="Right"
				VerticalAlignment="Top"
				Margin="0,0,4,0"
				Click="Bt_Close_Click" />
		</Grid>
		<StackPanel Margin="9,37,9,9">
			<Label
				Content="Username"
				FontSize="12"
				Foreground="#FFEFEDC4"
				VerticalAlignment="Top"
				HorizontalAlignment="Center"
				Height="24"
				HorizontalContentAlignment="Center"
				VerticalContentAlignment="Top">
			</Label>
			<TextBox Name="tb_username"
			         HorizontalAlignment="Center"
			         VerticalAlignment="Top"
			         Width="158"
			         PreviewKeyDown="Tb_username_PreviewKeyDown"/>
			<Label
				Content="Password"
				FontSize="12"
				Foreground="#FFEFEDC4"
				VerticalAlignment="Top"
				HorizontalAlignment="Center"
				Height="24"
				HorizontalContentAlignment="Center"
				VerticalContentAlignment="Top">
			</Label>
			<PasswordBox Name="tb_password"
			             HorizontalAlignment="Center"
			             VerticalAlignment="Top"
			             PreviewKeyUp="Tb_password_PreviewKeyUp"
			             PreviewKeyDown="Tb_username_PreviewKeyDown"
			             Width="158"/>
			<CheckBox HorizontalAlignment="Center"
			          Margin="-20,0,0,0"
			          Name="cb_remember">Remember me</CheckBox>
			<Button Name="bt_login" Click="Bt_login_Click" Width="100" Margin="0,7,0,0">Start</Button>
		</StackPanel>
	</Grid>
</Window>